Prospectus.extra_dep('file', 'pkgforge')

item do
  expected do
    url_xpath
    url 'https://www.archlinux.org/packages/extra/x86_64/libatomic_ops/'
    xpath '//*[@id="pkgdetails"]/h2'
    regex /^libatomic_ops ([\w.]*)-\d+$/
  end

  actual do
    git_tag
    regex /^(.*)-\d+$/
  end

  deps do
    PkgForge.load_from_file.deps.each do |dep_name, current_version|
      item do
        name dep_name

        expected do
          github_release
          repo "amylum/#{dep_name}"
        end

        actual do
          static
          set current_version
        end
      end
    end
  end
end
